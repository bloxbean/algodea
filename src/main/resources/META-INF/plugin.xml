<idea-plugin>
    <id>com.bloxbean.algorand</id>
    <name>BloxBean Algorand Smart Contract Integration</name>
    <vendor email="info@bloxbean.com" url="https://github.com/bloxbean/algorand-idea-plugin/">Algorand Idea Project
    </vendor>

    <description><![CDATA[
    Intellij IDEA plugin for Smart Contract development on Algorand blockchain
    ]]></description>

    <idea-version since-build="202"/>

    <depends>com.intellij.modules.java</depends>

    <project-components>
        <component>
            <implementation-class>com.bloxbean.algorand.idea.core.service.AlgoCacheService</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <sdkType implementation="com.bloxbean.algorand.idea.module.sdk.AlgoSdkType"/>

        <fileType name="TEAL File" implementationClass="com.bloxbean.algorand.idea.language.TEALFileType"
                  fieldName="INSTANCE" language="TEAL" extensions="teal"/>
        <lang.parserDefinition language="TEAL"
                               implementationClass="com.bloxbean.algorand.idea.language.TEALParserDefinition"/>
        <lang.syntaxHighlighterFactory language="TEAL"
                                       implementationClass="com.bloxbean.algorand.idea.language.TEALSyntaxHighlighterFactory"/>
<!--        <colorSettingsPage implementation="com.bloxbean.algorand.idea.language.TEALColorSettingsPage"/>-->
        <completion.contributor language="TEAL"
                                implementationClass="com.bloxbean.algorand.idea.language.completion.TEALCompletionContributor"/>

        <lang.documentationProvider language="TEAL" implementationClass="com.bloxbean.algorand.idea.language.documentation.TEALDocumentationProvider"/>

        <lang.commenter language="TEAL" implementationClass="com.bloxbean.algorand.idea.language.TEALProgramCommenter"/>

        <!-- module extensions -->
        <moduleType id="Algorand_Module" implementationClass="com.bloxbean.algorand.idea.module.AlgorandModuleType"/>
<!--        <facetType implementation="com.bloxbean.algorand.idea.module.facet.AlgoFacetType"/>-->
<!--        <framework.type implementation="com.bloxbean.algorand.idea.module.framework.AlgoFrameworkType"/>-->
<!--        <projectStructureDetector implementation="com.bloxbean.algorand.idea.module.detector.AlgoProjectStructureDetector"/>-->

        <toolWindow id="Algorand"
                        anchor="bottom"
                        factoryClass="com.bloxbean.algorand.idea.toolwindow.AlgoToolWindowFactory"/>

        <toolWindow id="Algorand Service"
                    anchor="right"
                    factoryClass="com.bloxbean.algorand.idea.toolwindow.AlgoServiceToolWindowFactory"/>

        <!-- file templates -->
        <internalFileTemplate name="Algo.Empty"/>
<!--    <internalFileTemplate name="Algo.VotingContract"/>-->

        <internalFileTemplate name="Algo.Dynamic Fee"/>
        <internalFileTemplate name="Algo.Hash Time Lock"/>
        <internalFileTemplate name="Algo.Delegate Key Registration"/>
        <internalFileTemplate name="Algo.Limit Order A"/>
        <internalFileTemplate name="Algo.Limit Order B"/>
        <internalFileTemplate name="Algo.Periodic Payment Escrow"/>
        <internalFileTemplate name="Algo.Split Contract"/>

<!--        <applicationService-->
<!--                            serviceImplementation="com.bloxbean.algorand.idea.serverint.service.NodeConfigState" />-->

<!--        <applicationConfigurable parentId="tools" instance="com.bloxbean.algorand.idea.serverint.NodeSettingsConfigurable"-->
<!--                                 id="com.bloxbean.algorand.idea.serverint.NodeSettingsConfigurable"-->
<!--                                 displayName="Algorand"/>-->

        <applicationService serviceImplementation="com.bloxbean.algorand.idea.serverint.service.NodeConfigState"/>
        <applicationService serviceImplementation="com.bloxbean.algorand.idea.serverint.service.AlgoLocalSDKState"/>
        <projectService serviceImplementation="com.bloxbean.algorand.idea.serverint.service.AlgoProjectState"/>
    </extensions>
    <actions>
        <action id="Algorand.NewTEALFile" class="com.bloxbean.algorand.idea.core.action.NewTEALFileAction"
                text="TEAL File" description="Create new TEAL file">
            <add-to-group group-id="NewGroup" anchor="first" />
        </action>

        <action id="Algo.teal.editor_context.compile" class="com.bloxbean.algorand.idea.compile.action.TEALCompileAction" text="Compile TEAL"
                description="Compile TEAL file">
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl T" second-keystroke="C"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <group id="com.bloxbean.algorand.idea.core.action.AlgoActionGroup" class="com.bloxbean.algorand.idea.core.action.AlgoActionGroup"
               popup="true"
               text="Algorand" description="Algorand">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>

            <group id="AlgoActionGroup.Accounts" text="Accounts" description="Accounts" popup="true">
            </group>
        </group>
        <action id="Algo.teal.compile" class="com.bloxbean.algorand.idea.compile.action.TEALCompileAction" text="Compile TEAL"
                description="Compile TEAL file">
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl T" second-keystroke="C"/>
            <add-to-group group-id="com.bloxbean.algorand.idea.core.action.AlgoActionGroup"/>
        </action>

        <action id="Algo.account.create" class="com.bloxbean.algorand.idea.account.action.CreateAccountAction" text="Create a New Account"
                description="Create New Account">
            <add-to-group group-id="AlgoActionGroup.Accounts"/>
        </action>
        <action id="Algo.account.createMultisig" class="com.bloxbean.algorand.idea.account.action.CreateMultisigAccountAction" text="Create a Multisig Account"
                description="Create New Multisig Account">
            <add-to-group group-id="AlgoActionGroup.Accounts"/>
        </action>
        <action id="Algo.account.list" class="com.bloxbean.algorand.idea.account.action.AccountListAction" text="List Accounts"
                description="List Accounts">
            <add-to-group group-id="AlgoActionGroup.Accounts"/>
        </action>
        <action id="Algo.multisig-account.list" class="com.bloxbean.algorand.idea.account.action.MultisigAccountListAction" text="List Multi-Sig Accounts"
                description="List Multi-Sig Accounts">
            <add-to-group group-id="AlgoActionGroup.Accounts"/>
        </action>
        <action id="Algo.servers.create" class="com.bloxbean.algorand.idea.serverint.action.CreateNewServerAction" text="Configure New Server"
                description="Configure New Server">
<!--            <add-to-group group-id="AlgoActionGroup.configuration"/>-->
        </action>
        <action id="Algo.servers.configure" class="com.bloxbean.algorand.idea.serverint.action.ConfigurationAction" text="Configuration"
                description="Configure New Server">
            <add-to-group group-id="com.bloxbean.algorand.idea.core.action.AlgoActionGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>